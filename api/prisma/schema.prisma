// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Perfil {
  ALUNO
  PROFESSOR
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nome      String
  perfil    Perfil   @default(ALUNO)
  ano       String?  // Apenas para alunos (1ยบ ano, 2ยบ ano, 3ยบ ano)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  questions Question[]

  @@map("users")
}

model Question {
  id        Int      @id @default(autoincrement())
  enunciado String
  alternativas Json
  correta   String
  justificativaRapida String
  justificativaDetalhada String
  justificativaAlternativasErradas Json
  ano       String
  topico    String
  subtopico String
  nivel     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("questions")
}